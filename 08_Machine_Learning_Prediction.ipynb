# GENERAR dataset_part_3.csv AUTOMÁTICAMENTE (si no lo tienes)
import pandas as pd

# Cargar dataset_part_2.csv (el que SÍ tienes)
df = pd.read_csv('dataset_part_2.csv')

# One-Hot Encoding exacto del curso
features = df[['FlightNumber', 'PayloadMass', 'Orbit', 'LaunchSite', 'Flights', 'GridFins',
               'Reused', 'Legs', 'LandingPad', 'Block', 'ReusedCount', 'Serial']]

features_one_hot = pd.get_dummies(features, columns=['Orbit', 'LaunchSite', 'LandingPad', 'Serial'])

# Asegurar tipo float
features_one_hot = features_one_hot.astype('float64')

# Añadir la columna Class (objetivo)
features_one_hot['Class'] = df['Class']

# Guardar
features_one_hot.to_csv('dataset_part_3.csv', index=False)

print(f"¡dataset_part_3.csv creado correctamente!")
